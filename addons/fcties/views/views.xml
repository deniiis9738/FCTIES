<odoo>
    <data>

        <!-- Vistas para el modelo Alumno -->
        <record model="ir.ui.view" id="fcties.alumno_tree">
            <field name="name">alumno.tree</field>
            <field name="model">fcties.alumno</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="apellidos"/>
                    <field name="fecha_nacimiento"/>
                    <field name="curso_academico"/>
                    <field name="correo_electronico"/>
                    <field name="telefono"/>
                    <field name="ciclo_formativo"/>
                    <field name="periodo_practica"/>
                    <field name="nota_media"/>
                    <field name="nota_media_texto"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fcties.alumno_form">
            <field name="name">alumno.form</field>
            <field name="model">fcties.alumno</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="apellidos"/>
                            <field name="fecha_nacimiento"/>
                            <field name="curso_academico"/>
                            <field name="correo_electronico"/>
                            <field name="telefono"/>
                            <field name="ciclo_formativo"/>
                            <field name="periodo_practica"/>
                            <field name="nota_media"/>
                            <field name="nota_media_texto" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista para el filtro de alumnos con nota media mayor de 8 -->
        <record model="ir.ui.view" id="fcties_filter_media">
            <field name="name">Alumnos con Nota Media Mayor de 8</field>
            <field name="model">fcties.alumno</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nota_media" string="Nota Media" filter_domain="[('nota_media', '>', 8)]"/>
                </search>
            </field>
        </record>

        <!-- Acción de ventana para el modelo Alumno -->
        <record model="ir.actions.act_window" id="fcties.alumno_action_window">
            <field name="name">fcties.alumno.action_window</field>
            <field name="res_model">fcties.alumno</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú principal "FCTIES" -->
        <record model="ir.ui.menu" id="fcties.menu_root">
            <field name="name">FCTIES</field>
            <field name="action" ref="fcties.alumno_action_window"/>
            <field name="sequence" eval="10"/>
        </record>

        <!-- Submenú "Alumnos" bajo el menú principal "FCTIES" -->
        <menuitem name="Alumnos" id="fcties.alumno_menu" parent="fcties.menu_root" action="fcties.alumno_action_window"/>

        <!-- Vistas para el modelo Empresa -->
        <record model="ir.ui.view" id="fcties.empresa_tree">
            <field name="name">empresa.tree</field>
            <field name="model">fcties.empresa</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="persona_contacto"/>
                    <field name="telefono_contacto"/>
                    <field name="correo_electronico"/>
                    <field name="direccion"/>
                    <field name="alumno_ids"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fcties.empresa_form">
            <field name="name">empresa.form</field>
            <field name="model">fcties.empresa</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="persona_contacto"/>
                            <field name="telefono_contacto"/>
                            <field name="correo_electronico"/>
                            <field name="direccion"/>
                            <field name="alumno_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción de ventana para el modelo Empresa -->
        <record model="ir.actions.act_window" id="fcties.empresa_action_window">
            <field name="name">fcties.empresa.action_window</field>
            <field name="res_model">fcties.empresa</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Submenú "Empresas" bajo el menú principal "FCTIES" -->
        <menuitem name="Empresas" id="fcties.empresa_menu" parent="fcties.menu_root" action="fcties.empresa_action_window"/>

        <record id="fcties.menu_action_root_fct" model="ir.actions.act_window">
            <field name="name">FCT</field>
            <field name="res_model">fcties.alumno</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fcties.alumno_tree"/> <!-- Ajusta el nombre de la vista -->
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haz clic en Crear para añadir nuevos alumnos.
                </p>
            </field>
        </record>

        <record id="fcties.menu_action_alumnos" model="ir.actions.act_window">
            <field name="name">Alumnos</field>
            <field name="res_model">fcties.alumno</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fcties.alumno_tree"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haz clic en Crear para añadir nuevos alumnos.
                </p>
            </field>
        </record>
        
        <record id="fcties.menu_action_empresas" model="ir.actions.act_window">
            <field name="name">Empresas</field>
            <field name="res_model">fcties.empresa</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fcties.empresa_tree"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haz clic en Crear para añadir nuevas empresas.
                </p>
            </field>
        </record>
        

        <!-- Menú FCT (root) y submenús Alumnos y Empresas -->
        <record id="menu_root_fct" model="ir.ui.menu">
            <field name="name">FCT</field>
            <field name="sequence" eval="10"/>
            <field name="action" ref="fcties.menu_action_root_fct"/>
        </record>

        <record id="menu_action_root_fct" model="ir.actions.act_window">
            <field name="name">FCT</field>
            <field name="res_model">fcties.alumno</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fcties.alumno_tree"/> <!-- Ajusta el nombre de la vista -->
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haz clic en Crear para añadir nuevos alumnos.
                </p>
            </field>
        </record>

        <record id="menu_alumnos" model="ir.ui.menu">
            <field name="name">Alumnos</field>
            <field name="parent_id" ref="fcties.menu_root_fct"/>
            <field name="action" ref="fcties.menu_action_alumnos"/>
            <field name="sequence" eval="5"/>
        </record>

        <record id="menu_action_alumnos" model="ir.actions.act_window">
            <field name="name">Alumnos</field>
            <field name="res_model">fcties.alumno</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fcties.alumno_tree"/> <!-- Ajusta el nombre de la vista -->
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haz clic en Crear para añadir nuevos alumnos.
                </p>
            </field>
        </record>

        <record id="menu_empresas" model="ir.ui.menu">
            <field name="name">Empresas</field>
            <field name="parent_id" ref="fcties.menu_root_fct"/>
            <field name="action" ref="fcties.menu_action_empresas"/>
            <field name="sequence" eval="10"/>
        </record>

        <record id="menu_action_empresas" model="ir.actions.act_window">
            <field name="name">Empresas</field>
            <field name="res_model">fcties.empresa</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fcties.empresa_tree"/> <!-- Ajusta el nombre de la vista -->
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haz clic en Crear para añadir nuevas empresas.
                </p>
            </field>
        </record>

        <!-- Definición de Grupos de Usuarios -->
        <record id="group_fct_coordinator" model="res.groups">
            <field name="name">Coordinador</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_fct_teacher" model="res.groups">
            <field name="name">Profesor</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Asignación de Permisos a los Grupos -->
        <record id="access_fct_coordinator" model="ir.model.access">
            <field name="name">Access FCT Coordinator</field>
            <field name="model_id" ref="model_fcties_alumno"/>
            <field name="group_id" ref="fcties.group_fct_coordinator"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="access_fct_teacher_alumno" model="ir.model.access">
            <field name="name">Access FCT Teacher Alumno</field>
            <field name="model_id" ref="model_fcties_alumno"/>
            <field name="group_id" ref="fcties.group_fct_teacher"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="access_fct_teacher_empresa" model="ir.model.access">
            <field name="name">Access FCT Teacher Empresa</field>
            <field name="model_id" ref="model_fcties_empresa"/>
            <field name="group_id" ref="fcties.group_fct_teacher"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>